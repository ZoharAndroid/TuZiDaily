<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_inline_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bluetitlecolor" >

        <ImageView
            android:id="@+id/iv_setting_activity_back"
            android:layout_width="45dip"
            android:layout_height="45dip"
            android:layout_marginLeft="17dp"
            android:background="@drawable/click_color_selector"
            android:clickable="true"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            android:text="设置选项 "
            android:textColor="@color/whitefont"
            android:textSize="18sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="10dip"
                android:text="常规" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="3dip"
                android:background="#66000000" />

            <RelativeLayout
                android:id="@+id/rl_setting_autoload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/click_color_selector"
                android:clickable="true"
                android:paddingLeft="4dip"
                android:paddingRight="4dip" >

                <TextView
                    android:id="@+id/tv_setting_autoload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dip"
                    android:text="自动离线下载"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_setting_autoload"
                    android:layout_marginTop="5dip"
                    android:paddingBottom="8dip"
                    android:text="仅Wi-Fi下可用，自动下载最新内容"
                    android:textColor="#77000000"
                    android:textSize="14sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="#33000000" />

            <RelativeLayout
                android:id="@+id/rl_setting_noimagemode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/click_color_selector"
                android:clickable="true"
                android:paddingLeft="4dip"
                android:paddingRight="4dip" >

                <TextView
                    android:id="@+id/tv_setting_noimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dip"
                    android:text="无图模式"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_setting_noimage"
                    android:layout_marginTop="5dip"
                    android:paddingBottom="8dip"
                    android:text="2G/3G网络下不下载图片"
                    android:textColor="#77000000"
                    android:textSize="14sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="#33000000" />

            <RelativeLayout
                android:id="@+id/rl_setting_bigfont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/click_color_selector"
                android:clickable="true"
                android:paddingLeft="4dip"
                android:paddingRight="4dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="10dip"
                    android:paddingTop="10dip"
                    android:text="大字号"
                    android:textSize="18sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginTop="8dip"
                android:text="其他" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="3dip"
                android:background="#66000000" />

            <RelativeLayout
                android:id="@+id/rl_setting_sendmessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/click_color_selector"
                android:clickable="true"
                android:paddingLeft="4dip"
                android:paddingRight="4dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="12dip"
                    android:paddingTop="12dip"
                    android:text="推送消息"
                    android:textSize="18sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="#33000000" />

            <RelativeLayout
                android:id="@+id/rl_setting_shareweibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/click_color_selector"
                android:clickable="true"
                android:paddingLeft="4dip"
                android:paddingRight="4dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="12dip"
                    android:paddingTop="12dip"
                    android:text="点评分享到微博"
                    android:textSize="18sp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="false" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="#33000000" />

            <TextView
                android:id="@+id/tv_setting_clearcache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/click_color_selector"
                android:clickable="true"
                android:paddingBottom="12dip"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingTop="12dip"
                android:text="清除缓存"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="#33000000" />

            <RelativeLayout
                android:id="@+id/rl_setting_checkupdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/click_color_selector"
                android:clickable="true"
                android:paddingLeft="4dip"
                android:paddingRight="4dip" >

                <TextView
                    android:id="@+id/tv_setting_checkupdata"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dip"
                    android:text="检查更新"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_setting_checkupdata"
                    android:layout_marginTop="3dip"
                    android:paddingBottom="8dip"
                    android:text="版本：2.5.4(392)"
                    android:textColor="#77000000"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="8dip"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:text="反馈" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1.2dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:layout_marginTop="3dip"
                android:background="#66000000" />

            <TextView
                android:id="@+id/tv_setting_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/click_color_selector"
                android:clickable="true"
                android:paddingBottom="12dip"
                android:paddingLeft="4dip"
                android:paddingRight="4dip"
                android:paddingTop="12dip"
                android:text="意见反馈"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.8dip"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:background="#33000000" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>